---
import { getCollection } from "astro:content";

import ProjectCard from "~/components/ProjectCard.astro";
import Layout from "~/layouts/Layout.astro";

const pinnedProjects = await getCollection("projects");
---

<Layout title="Proyectos - Open Source eUC">
	<a href="/" class="text-base-300">Volver</a>
	<ul>
		{pinnedProjects.map((project) => <ProjectCard project={project} />)}
	</ul>
</Layout>

<style>
	h1 {
		@apply bg-gradient-to-br from-primary-500 to-primary-700 bg-clip-text text-8xl font-extrabold text-transparent;
	}
	div {
		@apply flex h-screen flex-col items-center justify-center text-base-100;
	}
</style>
